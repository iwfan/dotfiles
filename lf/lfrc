set number on
set mouse on
set relativenumber on
set icons on
set drawbox on
set scrolloff 5
set incsearch on
set hiddenfiles '.git'

map <enter> shell
map A push %mkdir<space>
map a push %touch<space>
map x :cut

cmd trash %trash $fx
map d :trash

map gc cd ~/.config
map gv cd ~/.config/nvim
map gl cd ~/.config/lf
map gw cd ~/workplace
map g~ cd ~/

cmd open ${{
    test -L $f && f=$(readlink -f $f)
    case $(file --mime-type $f -b) in
        text/*|application/json) $EDITOR "$f";;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}
