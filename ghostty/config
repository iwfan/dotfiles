font-family = Maple Mono NF CN
font-size = 15
macos-option-as-alt = true
macos-titlebar-style = "tabs"
window-save-state = always
title = " "
# theme = Gruvbox Dark Hard
theme = Everforest Dark Hard
background = #272e33

# 将 CMD 键映射为 tmux 命令（使用 Ctrl+b 作为 prefix）
initial-command = "/opt/homebrew/bin/tmux new-session -A -s f"

# CMD+T 创建新窗口
keybind = super+t=text:\x02c

# CMD+W 关闭当前窗口
keybind = super+w=text:\x02&

# CMD+数字 切换到指定窗口
keybind = super+1=text:\x021
keybind = super+2=text:\x022
keybind = super+3=text:\x023
keybind = super+4=text:\x024
keybind = super+5=text:\x025

# CMD+D 水平分割
keybind = super+d=text:\x02|

# CMD+Shift+D 垂直分割
keybind = super+shift+d=text:\x02-

# CMD+[ 和 CMD+] 切换窗口
keybind = super+shift+left_bracket=text:\x02p
keybind = super+shift+right_bracket=text:\x02n
keybind = super+bracket_left=text:\x02o
keybind = super+bracket_right=text:\x02o

# CMD+K 清屏
keybind = super+k=text:\x02\x0c

# CMD+F 进入复制模式（搜索）
keybind = super+f=text:\x02[

# CMD+R 重载 tmux 配置
keybind = super+r=text:\x02r

# CMD+Z 最大化/还原当前面板
keybind = super+z=text:\x02z

# CMD+\ 打开 tmux 的 popup window
keybind = super+backslash=text:\x02\x20

