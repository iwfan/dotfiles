{
  "npm.binPath": "yarn",

  // coc settings
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnSaveFiletypes": ["prisma"],

  // suggest
  "suggest.enablePreselect": true,
  "suggest.enablePreview": true,
  "suggest.snippetsSupport": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  //diagnostic
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": " ",
  "diagnostic.hintSign": " ",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ",
  "diagnostic.separateRelatedInformationAsDiagnostics": true,

  // explorer
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "nvim-web-devicons",
  "explorer.file.hiddenRules": {
    "extensions": ["o", "a", "obj", "pyc"],
    "filenames": [".DS_Store"],
    "patternMatches": ["^\\.git$", "^\\.idea"]
  },
  "explorer.file.showHiddenFiles": false,
  "explorer.file.git.showUntrackedFiles": "system",
  "explorer.file.column.indent.indentLine": true,
  "explorer.file.root.template": "  [root] [fullpath]",
  "explorer.file.child.template": " [selection | clip | 1] [indent][icon | 1] [filename omitCenter 1][modified][readonly] [linkIcon & 1]",
  "explorer.git.icon.rootStatus.ahead": "⇡",
  "explorer.git.icon.rootStatus.behind": "⇣",
  "explorer.keyMappings.global": {
    "l": ["wait", "expandable?", ["expanded?", "collapse", "expand"], "open"]
  },

  // snippets
  "snippets.priority": 90,
  "snippets.textmateSnippetsRoots": ["~/dotfiles/nvim/snippets"],
  "snippets.extends": {
    "typescript": ["javascript"],
    "javascriptreact": ["javascript"]
  },

  // emment
  "emmet.priority": 3,
  "emmet.showAbbreviationSuggestions": true,
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "eruby": "html"
  },

  "eslint.packageManager": "pnpm",
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,

  // prettier
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": false,
  "prettier.stylelintIntegration": true,
  "prettier.statusItemText": "Prettier",

  // typescript
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "typescript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,

  // coc-lua
  "Lua.diagnostics.globals": ["vim", "hs", "spoon", "utf8"],
  "Lua.runtime.version": "Lua 5.1",
  "Lua.telemetry.enable": false,

  // vimlsp
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.indexes.gap": 10,
  "vimlsp.indexes.count": 3,
  "vimlsp.suggest.fromVimruntime": true,

  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  }
}
