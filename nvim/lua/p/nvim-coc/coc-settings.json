{
  "npm.binPath": "yarn",

  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.colorSupport": false,
  "coc.preferences.snippetStatusText": "SNIP",

  "suggest.enablePreselect": true,
  "suggest.enablePreview": true,
  "suggest.snippetsSupport": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": " ",
  "diagnostic.hintSign": " ",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ",
  "diagnostic.separateRelatedInformationAsDiagnostics": true,

  "snippets.enableStatusItem": true,
  "snippets.textmateSnippetsRoots": [
    "~/.local/share/nvim/site/pack/packer/start/friendly-snippets/snippets",
    "~/.local/share/nvim/site/pack/packer/start/friendly-snippets/snippets/javascript"
  ],
  "snippets.ultisnips.enable": false,
  "snippets.snipmate.enable": false,
  "snippets.extends": {
    "typescript": ["javascript"],
    "typescriptreact": ["javascript", "react-ts"],
    "javascriptreact": ["javascript", "react"]
  },

  "emmet.priority": 3,
  "emmet.showAbbreviationSuggestions": true,
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "eruby": "html"
  },

  "eslint.packageManager": "pnpm",
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,

  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": false,
  "prettier.stylelintIntegration": true,
  "prettier.statusItemText": "Prettier",

  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "typescript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,

  "Lua.diagnostics.globals": ["vim", "hs", "spoon", "utf8"],
  "Lua.runtime.version": "Lua 5.1",
  "Lua.telemetry.enable": false,

  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  }
}
