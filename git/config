# vim:ft=gitconfig
[core]
    excludesfile = ~/dotfiles/git/ignore
    autocrlf = input
    pager = delta
    ignorecase = false
[interactive]
    diffFilter = delta --color-only
[delta]
    side-by-side = false
    navigate = true
    dark = true
    line-numbers = true
[merge]
    conflictStyle = zdiff3
[commit]
    verbose = true
[push]
    default = current
[pull]
    rebase = true
[rebase]
    autoStash = true
[credential]
    helper = cache --timeout=3600
[branch]
    autoSetupRebase = always
[init]
	defaultBranch = main
