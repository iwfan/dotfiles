[delta]
    side-by-side = false
    navigate = true
    dark = true
    line-numbers = true
[merge]
    conflictStyle = zdiff3
[commit]
    verbose = true
[push]
    default = current
[pull]
    rebase = true
[rebase]
    autoStash = true
[credential]
    helper = cache --timeout=3600
[branch]
    autoSetupRebase = always
[includeIf "gitdir:~/works/"]
    path = ~/works/.gitconfig
